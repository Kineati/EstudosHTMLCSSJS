<!DOCTYPE html>
<html>
    <head>
        <title>Teste</title>
        <link rel="stylesheet" href="CSS/styles.css">
    </head>
        <body>
            <p style="font-size: 20px">Titulo da Anotacao:</p>
            <form>
                <input type="text" id="TituloAnotacao">
            </form>
            <p style="font-size: 20px"></p>

            <button type="button" onclick="FuncaoAdicionarAnotacao()">Criar Anotacao</button>
            <button type="button" onclick="FuncaoMostrarQuantidadeAnotacoes()">Mostrar Quantidade</button>
            <p></p>

            <script>
                var Contador = 0;
                var IdGlobal = 0;
                

                function FuncaoAdicionarAnotacao(){
                    var TextoDigitadoInput = document.getElementById("TituloAnotacao").value;
                    Contador++;
                    
                    const TituloAnotacoCriada = document.createElement("p");
                    TituloAnotacoCriada.id = Contador;
                    TituloAnotacoCriada.innerText = TextoDigitadoInput;
                    TituloAnotacoCriada.style = "font-size: 20px";
                    document.body.appendChild(TituloAnotacoCriada);

                    const BtnDeletarAnotacao = document.createElement("button");
                    BtnDeletarAnotacao.id = Contador;
                    BtnDeletarAnotacao.innerHTML = "Deletar Anotacao";
                    BtnDeletarAnotacao.onclick = FuncaoDeletarAnotacao;
                    document.body.appendChild(BtnDeletarAnotacao);
                }

                function FuncaoMostrarQuantidadeAnotacoes(){
                    alert("Quantidade de Anotacoes Criadas(desde o Inicio): " + Contador);
                }

                function FuncaoDeletarAnotacao(){
                    IdGlobal = document.getElementById(this.id);
                    IdGlobal.remove();
                    IdGlobal = document.getElementById(this.id);
                    IdGlobal.remove();
                }
 
            </script>
        </body>
</html>
