<!DOCTYPE html>
<html>
    <head>
        <title>Teste</title>
        <link rel="stylesheet" href="CSS/styles.css">
    </head>
        <body>
            <p style="font-size: 20px">Titulo da Anotacao:</p>
            <form>
                <input type="text" id="TituloAnotacao">
            </form>
            <p style="font-size: 20px"></p>

            <button type="button" onclick="CriarTitulo()">Criar Anotacao</button>
            <button type="button" onclick="MostrarValor()">Mostrar Valor</button>
            <p></p>

            <script>
                var cont = 0;
                function CriarTitulo(){
                    var aux = document.getElementById("TituloAnotacao").value;
                    cont++;
                    
                    const Titulo_Anotacao = document.createElement("p");
                    Titulo_Anotacao.id = cont;
                    Titulo_Anotacao.innerText = aux;
                    Titulo_Anotacao.style = "font-size: 20px";
                    document.body.appendChild(Titulo_Anotacao);

                    const Btn_Deletar = document.createElement("button");
                    Btn_Deletar.id = cont;
                    Btn_Deletar.innerHTML = "Deletar Anotacao";
                    document.body.appendChild(Btn_Deletar);
                }

                function MostrarValor(){
                    const ValorCont = document.createElement("p");
                    ValorCont.innerText = cont;
                    ValorCont.style = "font-size: 20px";
                    document.body.appendChild(ValorCont);
                }
            </script>
        </body>
</html>
